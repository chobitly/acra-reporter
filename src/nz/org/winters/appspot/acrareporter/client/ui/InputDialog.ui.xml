<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>

	</ui:style>
	<g:VerticalPanel>
		<g:Cell width="100%">
			<g:HorizontalPanel spacing="4">
				<g:Cell verticalAlignment="ALIGN_MIDDLE">
					<g:Label text="Input:" ui:field="labelInput" />
				</g:Cell>
				<g:TextBox ui:field="textBox" />
			</g:HorizontalPanel>
		</g:Cell>
		<g:Cell horizontalAlignment="ALIGN_CENTER">
			<g:HorizontalPanel spacing="4" horizontalAlignment="ALIGN_CENTER">
				<g:Button ui:field="buttonOK" width="80px">OK</g:Button>
				<g:Label width="20px" />
				<g:Button width="80px" ui:field="buttonCancel">Cancel</g:Button>
			</g:HorizontalPanel>
		</g:Cell>

	</g:VerticalPanel>
</ui:UiBinder> 