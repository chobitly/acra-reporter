<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>

	</ui:style>
	<g:FormPanel ui:field="form" action="/mappingupload">
		<g:VerticalPanel>
			<g:Cell width="100%">
				<g:Grid cellSpacing="4">
					<g:row>
						<g:customCell>
							<g:Label text="Package:" horizontalAlignment="ALIGN_RIGHT" />
						</g:customCell>
						<g:customCell>
							<g:TextBox ui:field="textPackage" visibleLength="50"
								name="package" />
						</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:Label text="Version:" horizontalAlignment="ALIGN_RIGHT" />
						</g:customCell>
						<g:customCell>
							<g:TextBox ui:field="textVersion" visibleLength="50"
								name="version" />
						</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:Label text="File:" horizontalAlignment="ALIGN_RIGHT" />
						</g:customCell>
						<g:customCell>
							<g:FileUpload ui:field="fileUpload" name="filetoupload" />
						</g:customCell>
					</g:row>
				</g:Grid>
			</g:Cell>
			<g:Cell width="100%" horizontalAlignment="ALIGN_CENTER">
				<g:HorizontalPanel horizontalAlignment="ALIGN_CENTER"
					spacing="4">
					<g:Button ui:field="buttonOK" width="80px">Submit</g:Button>
					<g:Label width="20px" />

					<g:Button ui:field="buttonCancel" width="80px">Cancel</g:Button>
				</g:HorizontalPanel>
			</g:Cell>

		</g:VerticalPanel>
	</g:FormPanel>
</ui:UiBinder> 